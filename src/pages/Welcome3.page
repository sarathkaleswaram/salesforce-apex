<apex:page standardController="Account" sidebar="false" tabStyle="Account">
<apex:form >
<apex:pageBlock title="Block A">
    <apex:pageBlockSection title="Section A" columns="2">
        <apex:inputField value="{!Account.Name}"/>
        <apex:inputField value="{!Account.Type}"/>
        <apex:inputField value="{!Account.Industry}"/>
        <apex:inputField value="{!Account.Rating}"/>
        <apex:inputField value="{!Account.Phone}" required="true"/>
        <apex:inputField value="{!Account.Fax}"/>
        
        <apex:inputText title="Helo" label="Helo"/>
        <apex:commandButton action="{!save}" value="Save"/>
    </apex:pageBlockSection>
</apex:pageBlock> 
</apex:form>  
</apex:page>